<div id="container">

 <center><image src="/<%= @meme.photo %>" width="50%" >

    <% if logged_in? %>
       <form method="post" action='/memes/<%= @meme.id %>/upvote'  >
          <button type="submit" name="submit_param" value="submit_value" ></button>
        </form>
    <% end %>
  <div class="vote_count"><%= @meme.total_votes %> </div>

        <form method="post" action='/memes/<%= @meme.id %>/downvote'  >
          <button type="submit" name="submit_param" value="submit_value" ></button>
        </form>

  <div class="meme-comments-display">
    <%= erb :'memes/_meme_comments', locals: { meme: @meme } %>
  </div>

  <div class="captions-display">
    <%= erb :'memes/_captions_comments', locals: { meme: @meme } %>
  </div>


  <% if logged_in? %>
    <%= erb :'memes/_add_caption'%>
  <% end %>
</center>


</div>
